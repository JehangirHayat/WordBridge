<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:gravity="center"> <!-- Centra los hijos dentro del LinearLayout principal -->

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cr43bffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"> <!-- Contenedor principal -->

        <!-- Icono superior -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_settings_foreground"
            android:contentDescription="Settings Icon"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/settings_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Pref"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Botones de idiomas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_ukraine"
                android:layout_width="49dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:contentDescription="Ukraine Flag"
                android:src="@drawable/flag_ukraine" />

            <ImageButton
                android:id="@+id/button_spanish"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:contentDescription="Spanish Flag"
                android:src="@drawable/flag_spain" />
            <ImageButton
                android:id="@+id/button_arabe"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:contentDescription="Arabe Flag"
                android:src="@drawable/flag_arabe" />


            <ImageButton
                android:id="@+id/button_english"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@null"
                android:contentDescription="UK Flag"
                android:src="@drawable/flag_uk" />
        </LinearLayout>

        <!-- Botón de volver -->
        <Button
            android:id="@+id/button_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/backlog"
            android:backgroundTint="@android:color/holo_orange_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
